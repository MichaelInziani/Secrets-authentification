<%- include('partials/header') %>

<div class="container mt-5">
    <h1>Login</h1>

    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-8">
            <div class="card">
                <div class="card-body">

                    <!-- Makes POST request to /login route -->
                    <form action="/login" method="POST">
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input name="username" type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input name="password" type="password" class="form-control" id="password" placeholder="Password">
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="rememberme">
                            <label class="form-check-label" for="rememberme">Rememmber Me</label>
                        </div>
                        <button aria-describedby="emailHelp" type="submit" class="btn btn-dark">login</button></br>
                        <small id="emailHelp" class="form-text text-muted">Not yet registered?</small>
                    </form>
                    <form class="form-group" action="/register" method="get">
                        <button class="btn btn-light">Register</button>
                    </form>

                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-12 col-lg-4">
            <div class="card">
                <div class="card-body">
                    <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
                        <i class="fab fa-google"></i>
                        Sign In with Google
                    </a>
                </div>
                <div class="card-body">
                    <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
                        <i class="fa-brands fa-facebook"></i>
                        Sign In with Facebook
                    </a>
                </div>
                <div class="card-body">
                    <a class="btn btn-block btn-social btn-github" href="/auth/github" role="button">
                        <i class="fa-brands fa-github"></i>
                        Sign In with Github
                    </a>
                </div>
            </div>
        </div>



    </div>
</div>

<%- include('partials/footer') %>
